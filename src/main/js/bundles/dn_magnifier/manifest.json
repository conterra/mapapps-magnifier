{
    "name": "dn_magnifier",
    "version": "1.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-magnifier",
    "components": [
        {
            "name": "Config",
            "impl": "./MagnifierFactory",
            "provides": [
                "dn_magnifier/MagnifierFactory"
            ],
            "properties": {
                "factor": 1.5,
                "size": 128,
                "offset": {"x": 0,"y": 0}
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=magnifierToggleTool)",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "MagnifierToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "magnifierToggleTool",
                "title": "${tool.title}",
                "iconClass": "icon-magnifier",
                "toolRole": "toolset",
                "togglable": true,
                "activateHandler": "showWidget",
                "deactivateHandler": "hideWidget",
                "noGroup": true
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_magnifier/MagnifierFactory"
                }
            ]
        }
    ]
}
