{
    "name": "dn_magnifier",
    "version": "1.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "i18n": [
        "bundle"
    ],
    "license": {},
    "productName": "devnet-mapapps-magnifier",
    "dependencies": {
        "apprt-vue": "^4.11.2-SNAPSHOT",
        "apprt-binding": "^4.11.2-SNAPSHOT",
        "apprt-vuetify": "^4.11.2-SNAPSHOT",
        "map-widget": "^4.11.2-SNAPSHOT",
        "esri": "^4.19.0"
    },
    "layout-widgets": [
        {
            "widgetRole": "magnifierControl",
            "window": {
                "title": "${widgetTitle}",
                "closable": true,
                "minimizeOnClose": true,
                "maximizable": true,
                "resizable": true,
                "draggable": true,
                "marginBox": {
                    "l": 20,
                    "t": 140,
                    "w": 300,
                    "h": 275
                }
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./MagnifierModel",
            "provides": [
                "dn_magnifier.MagnifierModel"
            ],
            "propertiesConstructor": true,
            "properties": {
                "factor": 1.5,
                "maskEnabled": true,
                "maskUrl": null,
                "offset": {
                    "x": 60,
                    "y": 60
                },
                "overlayEnabled": true,
                "overlayUrl": null,
                "size": 120,
                "visible": false,
                "offsetEnabled": true
            }
        },
        {
            "name": "MagnifierControlWidgetFactory",
            "provides": "dijit.Widget",
            "instanceFactory": true,
            "properties": {
              "widgetRole": "magnifierControl"
            },
            "references": [
                {
                    "name": "_magnifierModel",
                    "providing": "dn_magnifier.MagnifierModel"
                },
                {
                    "name": "_magnifierController",
                    "providing": "dn_magnifier.MagnifierController",
                    "cardinality": "0..1"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=magnifierToggleTool)",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "MagnifierController",
            "provides": "dn_magnifier.MagnifierController",
            "references": [
                {
                    "name": "_magnifierModel",
                    "providing": "dn_magnifier.MagnifierModel"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "MagnifierToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool",
                "dn_magnifier.MagnifierToggleTool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "magnifierToggleTool",
                "title": "${tool.title}",
                "iconClass": "icon-magnifier",
                "toolRole": "toolset",
                "togglable": true,
                "activateHandler": "showMagnifier",
                "deactivateHandler": "hideMagnifier",
                "noGroup": true
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_magnifier.MagnifierController"
                }
            ]
        }
    ]
}
